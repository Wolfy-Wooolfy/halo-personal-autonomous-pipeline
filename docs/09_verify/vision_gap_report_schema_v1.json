{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vision Gap Report Schema v1",
  "type": "object",
  "required": [
    "timestamp_utc",
    "total_gaps_count",
    "gaps",
    "result"
  ],
  "properties": {
    "timestamp_utc": {
      "type": "string"
    },
    "total_gaps_count": {
      "type": "integer"
    },
    "gaps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "gap_id",
          "vision_clause_id",
          "gap_type",
          "description",
          "severity",
          "recommended_fix_document"
        ],
        "properties": {
          "gap_id": { "type": "string" },
          "vision_clause_id": { "type": "string" },
          "gap_type": {
            "type": "string",
            "enum": ["MISSING_DOC", "WEAK_BINDING", "CONTRADICTION", "UNVERIFIABLE"]
          },
          "description": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"]
          },
          "recommended_fix_document": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "result": {
      "type": "string",
      "enum": ["PASS", "FAIL"]
    }
  },
  "additionalProperties": false
}
