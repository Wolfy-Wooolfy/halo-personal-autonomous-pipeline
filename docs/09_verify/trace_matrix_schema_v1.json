{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HALO Personal Autonomous Pipeline - Trace Matrix Schema v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "trace_matrix_id",
    "generated_at",
    "source_docs",
    "codebase_root",
    "coverage_summary",
    "rows"
  ],
  "properties": {
    "trace_matrix_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "minLength": 1
    },
    "source_docs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^docs/.*\\.(md|json)$"
      }
    },
    "codebase_root": {
      "type": "string",
      "pattern": "^(code/|src/|app/|backend/|packages/)"
    },
    "coverage_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "must_total",
        "must_covered",
        "must_coverage_percent",
        "should_total",
        "should_covered",
        "should_coverage_percent",
        "unmapped_must_count"
      ],
      "properties": {
        "must_total": { "type": "integer", "minimum": 0 },
        "must_covered": { "type": "integer", "minimum": 0 },
        "must_coverage_percent": { "type": "number", "minimum": 0, "maximum": 100 },
        "should_total": { "type": "integer", "minimum": 0 },
        "should_covered": { "type": "integer", "minimum": 0 },
        "should_coverage_percent": { "type": "number", "minimum": 0, "maximum": 100 },
        "unmapped_must_count": { "type": "integer", "minimum": 0 }
      }
    },
    "rows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "requirement_id",
          "requirement_level",
          "requirement_text",
          "doc_refs",
          "code_refs",
          "verification_refs",
          "status"
        ],
        "properties": {
          "requirement_id": {
            "type": "string",
            "minLength": 1
          },
          "requirement_level": {
            "type": "string",
            "enum": ["MUST", "SHOULD", "OPTIONAL"]
          },
          "requirement_text": {
            "type": "string",
            "minLength": 1
          },
          "doc_refs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["path", "anchor"],
              "properties": {
                "path": { "type": "string", "pattern": "^docs/.*\\.(md|json)$" },
                "anchor": { "type": "string", "minLength": 1 }
              }
            }
          },
          "code_refs": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["path", "symbol", "lines"],
              "properties": {
                "path": { "type": "string", "minLength": 1 },
                "symbol": { "type": "string", "minLength": 1 },
                "lines": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["start", "end"],
                  "properties": {
                    "start": { "type": "integer", "minimum": 1 },
                    "end": { "type": "integer", "minimum": 1 }
                  }
                }
              }
            }
          },
          "verification_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^artifacts/.*"
            }
          },
          "status": {
            "type": "string",
            "enum": ["COVERED", "PARTIAL", "MISSING"]
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}
