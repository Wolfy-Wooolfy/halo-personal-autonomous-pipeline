{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forge - Project Admission Definition Schema v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "admission_id",
    "generated_at",
    "project_name",
    "problem_definition",
    "intended_final_state",
    "success_metrics",
    "scope_boundaries",
    "initial_risk_assessment"
  ],
  "properties": {
    "admission_id": {
      "type": "string",
      "minLength": 8
    },
    "generated_at": {
      "type": "string",
      "minLength": 10
    },
    "project_name": {
      "type": "string",
      "minLength": 2
    },
    "problem_definition": {
      "type": "string",
      "minLength": 10
    },
    "intended_final_state": {
      "type": "string",
      "minLength": 10
    },
    "success_metrics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 3
      }
    },
    "scope_boundaries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 3
      }
    },
    "initial_risk_assessment": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "risks"
      ],
      "properties": {
        "risks": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "risk_id",
              "description",
              "severity"
            ],
            "properties": {
              "risk_id": {
                "type": "string",
                "minLength": 3
              },
              "description": {
                "type": "string",
                "minLength": 10
              },
              "severity": {
                "type": "string",
                "enum": [
                  "LOW",
                  "MEDIUM",
                  "HIGH"
                ]
              },
              "mitigation": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
